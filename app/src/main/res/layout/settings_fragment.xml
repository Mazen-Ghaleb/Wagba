<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Geyser"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="User Name"
                    android:textColor="@color/Denim"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_person"
                    android:layout_gravity="right"/>
        </LinearLayout>


        <TextView
            android:id="@+id/change_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/textlines"
            android:gravity="center|start"
            android:text="@string/change_email"
            android:textColor="@color/Denim"
            android:textSize="14sp"
            app:drawableEndCompat="@drawable/ic_arrow_right" />

        <TextView
            android:id="@+id/change_firstName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/textlines"
            android:gravity="center|start"
            android:text="@string/change_first_name"
            android:textColor="@color/Denim"
            android:textSize="14sp"
            app:drawableEndCompat="@drawable/ic_arrow_right" />

        <TextView
            android:id="@+id/change_lastName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/textlines"
            android:gravity="center|start"
            android:text="@string/change_last_name"
            android:textColor="@color/Denim"
            android:textSize="14sp"
            app:drawableEndCompat="@drawable/ic_arrow_right" />

        <TextView
            android:id="@+id/Language"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/textlines"
            android:gravity="center|start"
            android:text="@string/language"
            android:textColor="@color/Denim"
            android:textSize="14sp"
            app:drawableEndCompat="@drawable/ic_arrow_right" />

        <TextView
            android:id="@+id/sign_out_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center|start"
            android:text="@string/settings_sign_out"
            android:textColor="@color/Denim"
            android:textSize="14sp"
            app:drawableEndCompat="@drawable/ic_arrow_right" />

    <!--    Empty text field to compensate action bar"-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center|start"
        android:text=""
        android:textColor="@color/Denim"
        android:textSize="14sp"
         />


</LinearLayout>